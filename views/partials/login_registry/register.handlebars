<form action="/register" method="post" class="text-center" autocomplete="off">
    <img src="/imgs/logo.png" alt="logo" class="squaboxLogo">
    <h1>Register</h1>
    {{#if ErrorMsg}}
    {{>errorMsg}}
    {{/if}}
    <div class="row">
        <div class="form-group col-md-2 offset-md-4">
            <label for="username"><strong>username:</strong></label>
            <input type="text" class="form-control form-control-lg rounded-pill" name="username" id="username" placeholder="Enter username">
        </div>
        <div class="form-group col-md-2">
            <label for="username"><strong>email:</strong></label>
            <input type="email" class="form-control form-control-lg rounded-pill" name="email" id="email" placeholder="Enter email">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-2 offset-md-4">
            <label for="username"><strong>password:</strong></label>
            <input type="password" class="form-control form-control-lg rounded-pill" name="password" id="password" placeholder="Enter password">
        </div>
        <div class="form-group col-md-2">
            <label for="username"><strong>retype password:</strong></label>
            <input type="password" class="form-control form-control-lg rounded-pill" name="retypePassword" id="retypePassword" placeholder="Retype password">
        </div>
    </div>

    <input class="btn btn-dark btn-lg mt-4" value="Register" type='submit' />
</form>
