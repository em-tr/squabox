<form action="/login" class="text-center" method="post" autocomplete="off">
    <img src="/imgs/logo.png" alt="logo" class="squaboxLogo">
    <h1>Login</h1>
    {{#if ErrorMsg}}
    {{>errorMsg}}
    {{/if}}
    <div class="form-group col-md-2 offset-md-5">
        <label for="username"><strong>Username</strong></label>
        <input type="text" class="form-control form-control-lg rounded-pill" name="username" id="username" placeholder="Enter username">
    </div>
    <div class="form-group col-md-2 offset-md-5">
        <label for="password"><strong>Password</strong></label>
        <input type="password" class="form-control form-control-lg rounded-pill" name="password" id="password" placeholder="Enter password" aria-describedby="passwordHelp">
        <a id="passwordHelp" class="form-text text-muted small" href="#">Forgot password?</a>
    </div>
    <div>
        <span>Don't have an account? </span><a href="/register" style="color: black; text-decoration: underline">Sign up</a>
    </div>
    <input class="btn btn-dark btn-lg mt-4" value='login' type="submit" />
</form>
