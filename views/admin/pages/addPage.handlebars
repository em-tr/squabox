<link href="https://cdn.quilljs.com/1.0.0/quill.snow.css" rel="stylesheet">
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<form id="page-form" action="/admin/pages/addPage" method="post" autocomplete="off">
    <h1 class="text-center">Add new Page</h1>
    <div class="row pt-4">
      <div class="col-6 offset-3">
        <div class="form-group">
            <label for="status" class="offset-5"><strong>Layout</strong></label>
            <select class="form-control form-control-lg rounded-pill" name="layout" id="layout">
                {{#each Layouts}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
            </select>
            <small id="statusHelp" class="form-text text-muted">Select a Layout</small>
        </div>
      </div>
    </div>
    <div id="layout-target"></div>
    <div id="editor"></div>
    <div id="layout-bottom"></div>
    <div class="row pt-4">
        <div class="col">
            <div class="form-group">
                <label for="title" class="offset-5"><strong>Title</strong></label>
                <input type="text" class="form-control form-control-lg rounded-pill" name="title" id="title" placeholder="pagetitle">
                <small id="titleHelp" class="form-text text-muted">http://www.example.de/pagetitle</small>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="status" class="offset-5"><strong>Status</strong></label>
                <select class="form-control form-control-lg rounded-pill" name="status" id="status">
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label for="description" class="offset-5"><strong>Description</strong></label>
                <textarea class="form-control" name="description" id="description" rows="3"></textarea>
                <small id="descriptionHelp" class="form-text text-muted">
                    50-160 characters recommended
                </small>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="keywords" class="offset-5">Keywords</label>
                <input type="text" class="form-control form-control-lg rounded-pill" name="keywords" id="keywords"
                       placeholder="keywords">
                <small id="keywordsHelp" class="form-text text-muted">
                    Keywords will identify your Page
                </small>
            </div>
        </div>
    </div>
    <hr />
    <h2>Preview</h2>
    <div id="editor-toolbar"></div>
    <div class="container-fluid gridLayoutPreview">
        <div class="container gridLayoutContainer gridLayoutContainerAddPage">
        </div>
    </div>
    <button class="btn btn-dark col-md-2 offset-md-5" id="savePage" type="submit">Save</button>
</form>
