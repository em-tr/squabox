<div class="col-md-10">
    <form id="page-edit-form" action="/admin/pages/editPage/{{page._id}}" method="post" autocomplete="off">
        <h1>Edit Page</h1>
        <div class="row pt-4">
            <div class="col">
                <div class="form-group">
                    <!-- <label for="status">Layout {{page.layout}}</label> -->
                    <input type="hidden" id="editLayout" name="layout" value="{{page.layout}}">
                    <h2>Preview</h2>
                    <div id="editor-toolbar"></div>
                    <div class="container-fluid gridLayoutPreview">
                        <div class="container gridLayoutContainer gridLayoutContainerAddPage">
                            {{{page.content}}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col"></div>
        </div>
        <div id="layout-target"></div>
        <div class="row pt-4">
            <div class="col">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input value="{{page.title}}" type="text" class="form-control" name="title" id="title" placeholder="{{page.title}}">
                    <small id="titleHelp" class="form-text text-muted">http://www.example.de/pagetitle</small>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="status">Status</label>
                    {{#ifeq page.status "public"}}
                    <select class="form-control" name="status" id="status">
                        <option value="public" selected>Public</option>
                        <option value="private">Private</option>
                    </select>
                    {{else}}
                    <select class="form-control" name="status" id="status">
                        <option value="public">Public</option>
                        <option value="private" selected>Private</option>
                    </select>
                    {{/ifeq}}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" value="{{page.description}}" name="description" id="description" rows="3">{{page.description}}</textarea>
                    <small id="descriptionHelp" class="form-text text-muted">
                        50-160 characters recommended
                    </small>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="keywords">Keywords</label>
                    <input type="text" class="form-control" name="keywords" id="keywords"
                           placeholder="keywords">{{page.keywords}}
                </div>
            </div>
        </div>
        <button class="btn btn-dark col-md-2 offset-md-5" type="submit">Save</button>
    </form>
</div>
